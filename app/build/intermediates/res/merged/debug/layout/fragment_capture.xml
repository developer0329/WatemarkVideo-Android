<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/mainContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg">

    <RelativeLayout
        android:id="@+id/textureViewContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="280dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/surface_bg"
        android:padding="16dp">

        <SurfaceView
            android:id="@+id/surfaceView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/watermark"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/captureButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="95dp"
        android:clickable="true"
        android:src="@drawable/camera_photo_selector"/>

    <ImageView
        android:id="@+id/leftButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/captureButton"
        android:layout_marginRight="16dp"
        android:layout_marginTop="45dp"
        android:layout_toLeftOf="@+id/captureButton"
        android:layout_toStartOf="@+id/captureButton"
        android:src="@drawable/left_button"/>


    <ImageView
        android:id="@+id/rightButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/leftButton"
        android:layout_marginLeft="24dp"
        android:layout_toEndOf="@+id/captureButton"
        android:layout_toRightOf="@+id/captureButton"
        android:src="@drawable/right_button"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/modeSelector"
            android:layout_width="90dp"
            android:layout_height="55dp"
            android:src="@drawable/selector_mode"/>

        <ImageView
            android:id="@+id/changeCamera"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginBottom="6dp"
            android:src="@drawable/change_camera_btn"/>

        <ImageView
            android:id="@+id/galeryButton"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/galary_mode"/>

        <ImageView
            android:id="@+id/updateWatermarks"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/watermarks"/>
    </LinearLayout>
</RelativeLayout>